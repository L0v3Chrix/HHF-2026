      "red": {
        "bg": { "$value": "#a03040", "$type": "color" },
        "text": { "$value": "#f5f0e8", "$type": "color" },
        "hover": { "$value": "#b04050", "$type": "color" }
      }
    },
    "helpnow": {
      "bg": { "$value": "rgba(120, 50, 60, 0.7)", "$type": "color", "$description": "Help Now ATX pill background" },
      "border": { "$value": "rgba(160, 80, 90, 0.5)", "$type": "color" }
    }
  },
  "typography": {
    "fontFamily": {
      "heading": { "$value": "'Playfair Display', Georgia, serif", "$type": "fontFamily" },
      "body": { "$value": "'Inter', system-ui, sans-serif", "$type": "fontFamily" }
    },
    "fontSize": {
      "xs": { "$value": "0.75rem", "$type": "dimension" },
      "sm": { "$value": "0.875rem", "$type": "dimension" },
      "base": { "$value": "1rem", "$type": "dimension" },
      "lg": { "$value": "1.125rem", "$type": "dimension" },
      "xl": { "$value": "1.25rem", "$type": "dimension" },
      "2xl": { "$value": "1.5rem", "$type": "dimension" },
      "3xl": { "$value": "1.875rem", "$type": "dimension" },
      "4xl": { "$value": "2.25rem", "$type": "dimension" },
      "5xl": { "$value": "3rem", "$type": "dimension" },
      "6xl": { "$value": "3.75rem", "$type": "dimension" },
      "hero": { "$value": "clamp(2.5rem, 5vw, 4rem)", "$type": "dimension", "$description": "Responsive hero text" }
    },
    "fontWeight": {
      "normal": { "$value": "400", "$type": "fontWeight" },
      "medium": { "$value": "500", "$type": "fontWeight" },
      "semibold": { "$value": "600", "$type": "fontWeight" },
      "bold": { "$value": "700", "$type": "fontWeight" }
    },
    "lineHeight": {
      "tight": { "$value": "1.1", "$type": "number" },
      "snug": { "$value": "1.25", "$type": "number" },
      "normal": { "$value": "1.5", "$type": "number" },
      "relaxed": { "$value": "1.625", "$type": "number" }
    }
  },
  "spacing": {
    "0": { "$value": "0", "$type": "dimension" },
    "1": { "$value": "0.25rem", "$type": "dimension" },
    "2": { "$value": "0.5rem", "$type": "dimension" },
    "3": { "$value": "0.75rem", "$type": "dimension" },
    "4": { "$value": "1rem", "$type": "dimension" },
    "5": { "$value": "1.25rem", "$type": "dimension" },
    "6": { "$value": "1.5rem", "$type": "dimension" },
    "8": { "$value": "2rem", "$type": "dimension" },
    "10": { "$value": "2.5rem", "$type": "dimension" },
    "12": { "$value": "3rem", "$type": "dimension" },
    "16": { "$value": "4rem", "$type": "dimension" },
    "20": { "$value": "5rem", "$type": "dimension" },
    "24": { "$value": "6rem", "$type": "dimension" }
  },
  "borderRadius": {
    "sm": { "$value": "0.25rem", "$type": "dimension" },
    "md": { "$value": "0.5rem", "$type": "dimension" },
    "lg": { "$value": "0.75rem", "$type": "dimension" },
    "xl": { "$value": "1rem", "$type": "dimension" },
    "2xl": { "$value": "1.5rem", "$type": "dimension" },
    "3xl": { "$value": "2rem", "$type": "dimension" },
    "card": { "$value": "1.5rem", "$type": "dimension", "$description": "Card border radius" },
    "button": { "$value": "9999px", "$type": "dimension", "$description": "Pill button radius" }
  },
  "shadow": {
    "sm": { "$value": "0 1px 2px rgba(0, 0, 0, 0.3)", "$type": "shadow" },
    "md": { "$value": "0 4px 6px rgba(0, 0, 0, 0.3)", "$type": "shadow" },
    "lg": { "$value": "0 10px 15px rgba(0, 0, 0, 0.4)", "$type": "shadow" },
    "xl": { "$value": "0 20px 25px rgba(0, 0, 0, 0.4)", "$type": "shadow" },
    "card": { "$value": "0 25px 50px -12px rgba(0, 0, 0, 0.5)", "$type": "shadow", "$description": "Card shadow" },
    "glow": {
      "maroon": { "$value": "0 0 60px rgba(122, 35, 50, 0.4)", "$type": "shadow" },
      "amber": { "$value": "0 0 60px rgba(196, 98, 58, 0.4)", "$type": "shadow" }
    }
  },
  "blur": {
    "sm": { "$value": "4px", "$type": "dimension" },
    "md": { "$value": "8px", "$type": "dimension" },
    "lg": { "$value": "16px", "$type": "dimension" },
    "xl": { "$value": "24px", "$type": "dimension" },
    "glass": { "$value": "12px", "$type": "dimension", "$description": "Glass effect blur" }
  },
  "motion": {
    "duration": {
      "fast": { "$value": "150ms", "$type": "duration" },
      "normal": { "$value": "300ms", "$type": "duration" },
      "slow": { "$value": "500ms", "$type": "duration" }
    },
    "easing": {
      "default": { "$value": "cubic-bezier(0.4, 0, 0.2, 1)", "$type": "cubicBezier" },
      "in": { "$value": "cubic-bezier(0.4, 0, 1, 1)", "$type": "cubicBezier" },
      "out": { "$value": "cubic-bezier(0, 0, 0.2, 1)", "$type": "cubicBezier" },
      "inOut": { "$value": "cubic-bezier(0.4, 0, 0.2, 1)", "$type": "cubicBezier" }
    }
  },
  "breakpoint": {
    "sm": { "$value": "640px", "$type": "dimension" },
    "md": { "$value": "768px", "$type": "dimension" },
    "lg": { "$value": "1024px", "$type": "dimension" },
    "xl": { "$value": "1280px", "$type": "dimension" },
    "2xl": { "$value": "1536px", "$type": "dimension" }
  }
