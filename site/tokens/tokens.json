{
  "$schema": "https://design-tokens.org/draft/dtcg.schema.json",
  "color": {
    "background": {
      "base": { "$value": "#1a1512", "$type": "color", "$description": "Dark charcoal/brown background" },
      "elevated": { "$value": "#2a2520", "$type": "color", "$description": "Slightly lighter for elevated surfaces" }
    },
    "foreground": {
      "primary": { "$value": "#f5f0e8", "$type": "color", "$description": "Cream white for headings" },
      "secondary": { "$value": "#c8c0b0", "$type": "color", "$description": "Muted cream for body text" },
      "muted": { "$value": "#8a8070", "$type": "color", "$description": "Muted text" }
    },
    "brand": {
      "maroon": {
        "base": { "$value": "#7a2332", "$type": "color", "$description": "Primary maroon" },
        "dark": { "$value": "#4a1520", "$type": "color", "$description": "Dark maroon" },
        "light": { "$value": "#9a3342", "$type": "color", "$description": "Light maroon" }
      },
      "amber": {
        "base": { "$value": "#c4623a", "$type": "color", "$description": "Primary amber/orange" },
        "dark": { "$value": "#8a3f24", "$type": "color", "$description": "Dark amber" },
        "light": { "$value": "#d4825a", "$type": "color", "$description": "Light amber" }
      },
      "red": {
        "base": { "$value": "#a03040", "$type": "color", "$description": "Action red for buttons" },
        "hover": { "$value": "#b04050", "$type": "color", "$description": "Red hover state" }
      }
    },
    "surface": {
      "card": {
        "support": { "$value": "linear-gradient(135deg, rgba(122, 35, 50, 0.8) 0%, rgba(74, 21, 32, 0.9) 100%)", "$type": "gradient", "$description": "Support card gradient" },
        "give": { "$value": "linear-gradient(135deg, rgba(196, 98, 58, 0.8) 0%, rgba(138, 63, 36, 0.9) 100%)", "$type": "gradient", "$description": "Give card gradient" }
      },
      "glass": { "$value": "rgba(255, 255, 255, 0.05)", "$type": "color", "$description": "Glass overlay" }
    },
    "button": {
      "cream": {
        "bg": { "$value": "#f5f0e8", "$type": "color" },
        "text": { "$value": "#3a2a20", "$type": "color" },
        "hover": { "$value": "#ebe5db", "$type": "color" }
